{
  "compilerOptions": {
    "outDir": "", // Emit all of the output files in built (with outDir).
    "allowJs": true, // Accept JavaScript files as inputs (with allowJs).
    "target": "es5", // Translate newer JavaScript constructs down to an older version like ECMAScript 5 (using target).
    "rootDir": "./",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["public/src/*", "server.ts", "uri.ts"] // Read in any files it understands in the pubilc/src directory (with include).
}
